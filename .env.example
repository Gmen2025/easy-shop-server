# Database
CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/dbname

# API Configuration
API_URL=/api/v1
PORT=3001

# JWT Secret
secret=your_jwt_secret_here_use_strong_random_string

# Email Configuration (Option 1: Use service name)
EMAIL_SERVICE=gmail
EMAIL_User=your_email@gmail.com
EMAIL_Pass=your_app_password_or_api_key

# Email Configuration (Option 2: Custom SMTP - comment out EMAIL_SERVICE if using this)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Email sender (optional)
FROM_EMAIL=noreply@yourapp.com

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key

# Telebirr Payment Gateway
USE_MOCK_TELEBIRR=true
TELEBIRR_BASE_URL=https://api.telebirr.com
TELEBIRR_APP_ID=your_app_id
TELEBIRR_MERCHANT_CODE=your_merchant_code
TELEBIRR_MERCHANT_APP_ID=your_merchant_app_id
TELEBIRR_FABRIC_APP_ID=your_fabric_app_id
TELEBIRR_PRIVATE_KEY=your_private_key_here
NOTIFY_URL=https://yourapp.com/api/v1/telebirr/webhook
REDIRECT_URL=https://yourapp.com/payment/success
TELEBIRR_WEB_BASE_URL=https://telebirr.com/payment/checkout

# Frontend/Backend URLs (for CORS)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
